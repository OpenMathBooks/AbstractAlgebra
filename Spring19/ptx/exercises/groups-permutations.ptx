    <exercise permid="VsN">
      <statement>
        <p permid="JOC">
          Express the following permutations as products of transpositions and identify them as even or odd.

          <ol cols="2" permid="KcK">
            <li permid="sJa">
              <p permid="NVF">
                <m>(14356)</m>
              </p>
            </li>

            <li permid="YQj">
              <p permid="ucO">
                <m>(156)(234)</m>
              </p>
            </li>

            <li permid="EXs">
              <p permid="ajX">
                <m>(1426)(142)</m>
              </p>
            </li>

            <li permid="leB">
              <p permid="Grg">
                <m>(17254)(1423)(154632)</m>
              </p>
            </li>

            <li permid="RlK">
              <p permid="myp">
                <m>(142637)</m>
              </p>
            </li>
          </ol>
        </p>
      </statement>
      <hint permid="Kyj">
        <p permid="NeH">
          (a) <m>(16)(15)(13)(14)</m>; (c) <m>(16)(14)(12)</m>.
        </p>
