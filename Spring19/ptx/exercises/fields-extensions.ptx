    <exercise permid="kHP">
      <statement>
        <p permid="nCI">
          Show that each of the following numbers is algebraic over
          <m>{\mathbb Q}</m> by finding the minimal polynomial of the number over <m>{\mathbb Q}</m>.

          <ol permid="Ndu">
            <li permid="zJJ">
              <p permid="mZS">
                <m>\sqrt{ 1/3 + \sqrt{7} }</m>
              </p>
            </li>

            <li permid="fQS">
              <p permid="Thb">
                <m>\sqrt{ 3} + \sqrt[3]{5}</m>
              </p>
            </li>

            <li permid="LYb">
              <p permid="zok">
                <m>\sqrt{3} + \sqrt{2}\, i</m>
              </p>
            </li>

            <li permid="sfk">
              <p permid="fvt">
                <m>\cos \theta + i \sin \theta</m> for
                <m>\theta = 2 \pi /n</m> with <m>n \in {\mathbb N}</m>
              </p>
            </li>

            <li permid="Ymt">
              <p permid="LCC">
                <m>\sqrt{ \sqrt[3]{2} - i }</m>
              </p>
            </li>
          </ol>
        </p>
      </statement>
      <hint permid="ypV">
        <p permid="Tvw">
          (a) <m>x^4 - (2/3) x^2 - 62/9</m>; (c) <m>x^4 - 2 x^2 + 25</m>.
        </p>
      </hint>
    </exercise>

  
    <exercise permid="Jkz">
      <statement>
        <p permid="Mfs">
          Show that <m>{\mathbb Z}_2[x] / \langle x^3 + x + 1 \rangle</m> is a field with eight elements.
          Construct a multiplication table for the multiplicative group of the field.
        </p>
      </statement>
      <hint permid="Pog">
        <p permid="LQX">
          Use the fact that the elements of
          <m>{\mathbb Z}_2[x]/ \langle x^3 + x + 1 \rangle</m> are 0, 1, <m>\alpha</m>,
          <m>1 + \alpha</m>,
          <m>\alpha^2</m>, <m>1 + \alpha^2</m>, <m>\alpha + \alpha^2</m>,
          <m>1 + \alpha + \alpha^2</m> and the fact that <m>\alpha^3 + \alpha + 1 = 0</m>.
        </p>
      </hint>
    </exercise>

  


    <exercise permid="hNj">
      <statement>
        <p permid="kIc">
          Prove that <m>{\mathbb Q}(\sqrt{3}, \sqrt[4]{3}, \sqrt[8]{3}, \ldots )</m> is an algebraic extension of
          <m>{\mathbb Q}</m> but not a finite extension.
        </p>
      </statement>
    </exercise>

    <exercise permid="NUs">
      <statement>
        <p permid="QPl">
          Prove or disprove:
          <m>\pi</m> is algebraic over <m>{\mathbb Q}(\pi^3)</m>.
        </p>
      </statement>
    </exercise>


    <exercise permid="aiK">
      <statement>
        <p permid="ddD">
          Prove or disprove:
          <m>{\mathbb Q}( \sqrt{2}\, ) \cong {\mathbb Q}( \sqrt{3}\, )</m>.
        </p>
      </statement>
    </exercise>

    <exercise permid="GpT">
      <statement>
        <p permid="JkM">
          Prove that the fields <m>{\mathbb Q}(\sqrt[4]{3}\, )</m> and
          <m>{\mathbb Q}(\sqrt[4]{3}\, i)</m> are isomorphic but not equal.
        </p>
      </statement>
    </exercise>



    <exercise permid="SEl">
      <statement>
        <p permid="Vze">
          Prove or disprove:
          <m>{\mathbb Z}[x] / \langle x^3 -2 \rangle</m> is a field.
        </p>
      </statement>
    </exercise>



    <exercise permid="jCw">
      <statement>
        <p permid="mxp">
          Show that <m>{\mathbb Q}( \sqrt{3}, \sqrt{7}\, ) = {\mathbb Q}( \sqrt{3} + \sqrt{7}\, )</m>.
          Extend your proof to show that <m>{\mathbb Q}( \sqrt{a}, \sqrt{b}\, ) = {\mathbb Q}( \sqrt{a} + \sqrt{b}\, )</m>,
          where <m>\gcd(a, b) = 1</m>.
        </p>
      </statement>
      <hint permid="ibE">
        <p permid="Emy">
          Since <m>\{ 1, \sqrt{3}, \sqrt{7}, \sqrt{21}\, \}</m> is a basis for
          <m>{\mathbb Q}( \sqrt{3}, \sqrt{7}\, )</m> over <m>{\mathbb Q}</m>,
          <m>{\mathbb Q}( \sqrt{3}, \sqrt{7}\, ) \supset {\mathbb Q}( \sqrt{3} +\sqrt{7}\, )</m>.
          Since <m>[{\mathbb Q}( \sqrt{3}, \sqrt{7}\, ) : {\mathbb Q}] = 4</m>,
          <m>[{\mathbb Q}( \sqrt{3} + \sqrt{7}\, ) : {\mathbb Q}] = 2</m> or 4.
          Since the degree of the minimal polynomial of
          <m>\sqrt{3} +\sqrt{7}</m> is 4, <m>{\mathbb Q}( \sqrt{3}, \sqrt{7}\, ) = {\mathbb Q}( \sqrt{3} +\sqrt{7}\, )</m>.
        </p>
      </hint>
    </exercise>



    <exercise permid="vQO">
      <statement>
        <p permid="yLH">
          Prove or disprove: Given a polynomial <m>p(x)</m> in <m>{\mathbb Z}_6[x]</m>,
          it is possible to construct a ring <m>R</m> such that <m>p(x)</m> has a root in <m>R</m>.
        </p>
      </statement>
    </exercise>


    <exercise permid="Ifg">
      <statement>
        <p permid="KZZ">
          Let <m>\alpha, \beta</m> be transcendental over <m>{\mathbb Q}</m>.
          Prove that either <m>\alpha \beta</m> or
          <m>\alpha + \beta</m> is also transcendental.
        </p>
      </statement>
    </exercise>



